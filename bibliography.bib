@Article{CardenasMora2022,
  author    = {C\'{a}rdenas, Alvaro A. and Nadjm-Tehrani, Simin and Weippl, Edgar and Eckhart, Matthias},
  journal   = {Dagstuhl Reports},
  title     = {{Digital Twins for Cyber-Physical Systems Security (Dagstuhl Seminar 22171)}},
  year      = {2022},
