@InProceedings{Eckhart2019c,
  author    = {Eckhart, Matthias and Ekelhart, Andreas and Weippl, Edgar},
  booktitle = {24th IEEE International Conference on Emerging Technologies and Factory Automation},
  title     = {Enhancing Cyber Situational Awareness for Cyber-Physical Systems through Digital Twins},
  year      = {2019},
