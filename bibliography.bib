@Article{Uhlemann2017,
  author   = {Uhlemann, Thomas H.-J. and Lehmann, Christian and Steinhilper, Rolf},
  journal  = {Procedia CIRP},
  title    = {The Digital Twin: Realizing the Cyber-Physical Production System for {Industry 4.0}},
