  doi       = {10.1145/3198458.3198464},
  isbn      = {978-1-4503-5755-5},
  keywords  = {automationml, cyber-physical systems, digital twin, industrial control systems, security monitoring, simulation},
  location  = {Incheon, Republic of Korea},
  numpages  = {12},
}

@InProceedings{Eckhart2018a,
  author    = {Eckhart, Matthias and Ekelhart, Andreas},
  booktitle = {Proceedings of the 2018 Workshop on Cyber-Physical Systems Security and PrivaCy},
  title     = {A Specification-based State Replication Approach for Digital Twins},
  year      = {2018},
  address   = {New York, NY, United States of America},
