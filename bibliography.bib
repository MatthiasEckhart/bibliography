  doi       = {10.1109/TAC.2014.2303233},
  keywords  = {control system synthesis;critical infrastructures;fault tolerant control;feedback;linear systems;security of data;stability;state estimation;adversarial attacks;critical infrastructure;feedback control loops;linear system control;secure local control loop;compressed sensing;system stabilization;sensor attacks;resilient output feedback controller design;resilient state estimators;secure cyber-physical system estimation;secure cyber-physical system control;Vectors;Sensor systems;Actuators;Estimation;Decoding;Algorithm;feedback controller},
